    <title><%= title %></title>
</head>

<body>

    <nav>
        <a href="/cocktails" <%- title === 'All Cocktails' ? 'class="active"' : '' %>>ALL COCKTAILS</a>
        <a href="/cocktails/new" <%- title === 'Add Cocktail' ? 'class="active"' : '' %>>ADD COCKTAIL</a>
        <a href="/users/:id" <%- title === 'Home' ? 'class="active"' : '' %>>HOME</a>
        <ul class="right">
            <li>
                <% if (user) { %>
                <a href="/logout"><i class="material-icons left">trending_flat</i>Log Out</a>
                <% } else { %>
                <a href="/auth/google"><i class="material-icons left">vpn_key</i>Login with Google</a>
                <% } %>
            </li>
        </ul>
    </nav>
    <main>
        <h1><%= title %></h1>